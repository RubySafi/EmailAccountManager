<Window x:Class="EmailAccountManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailAccountManager"
        mc:Ignorable="d" Background="#F5F5F5"
        Title="Account Manager" Height="450" Width="800" ResizeMode="CanMinimize">

    <Window.Resources>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#CCE0F7FF"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#CCE0F7FF"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="StatusBarItemStyle" TargetType="StatusBarItem">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0,0,0,0" />
        </Style>
    </Window.Resources>

    <Grid Margin="0,5,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>            <!-- Search  -->
            <RowDefinition Height="*"/>            <!-- Display all -->
            <RowDefinition Height="Auto"/>  <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="UseFilterCheckBox"
              Content="Use Filter" Margin="5,0,4,0" VerticalAlignment="Center" Checked="UseFilterCheckBox_Checked" Unchecked="UseFilterCheckBox_Unchecked"/>


            <TextBox x:Name="SearchTextBox" Margin="0,0,10,0" Grid.Column="1" VerticalAlignment="Center" TextChanged="SearchTextBox_TextChanged" 
                     HorizontalAlignment="Stretch" Background="Transparent" />
                

                <Label Content="Enter email address to filter..." Grid.Column="1"
                   x:Name="PlaceholderLabel" Foreground="Gray" Margin="4,0,0,0" VerticalAlignment="Center"
                   IsHitTestVisible="False" Background="Transparent" Padding="0" Visibility="Visible" />

            <TextBlock Text="Right-click to add, delete, or edit." VerticalAlignment="Center"
               Grid.Column="2" Margin="0,0,5,0"/>
        </Grid>


        <!-- DataGrid with site information -->
        <DataGrid x:Name="SiteDataGrid" Grid.Row="1" Margin="5,0,5,0" SelectionMode="Single" AutoGenerateColumns="False"
                  HeadersVisibility="Column" GridLinesVisibility="All"  CanUserResizeColumns="True" CanUserSortColumns="True"
                  HorizontalScrollBarVisibility="Auto"
                  IsReadOnly="True" ItemsSource="{Binding FilteredSiteList}">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add New" Click="AddMenuItem_Click"/>
                    <MenuItem Header="Edit" Click="EditMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="Delete" Click="DeleteMenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding SiteName}" Width="120"/>
                <DataGridTextColumn Header="Security" Binding="{Binding SecurityLevel}" Width="100"/>
                <DataGridTextColumn Header="Email Addresses" Binding="{Binding AllEmails}" Width="200"/>
                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="200"/>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat=\{0:yyyy/MM/dd\}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2" VerticalAlignment="Bottom" Height="Auto" BorderBrush="Gray" BorderThickness="0,1,0,0">
            <StatusBarItem Style="{StaticResource StatusBarItemStyle}">
                <TextBlock x:Name="StatusUserTextBlock" Text="User: administrator" />
            </StatusBarItem>
            <Separator VerticalAlignment="Stretch" />
            <StatusBarItem Style="{StaticResource StatusBarItemStyle}">
                <TextBlock x:Name="StatusTotalCountTextBlock" Text="Total: 0" />
            </StatusBarItem>
            <Separator VerticalAlignment="Stretch" />
            <StatusBarItem Style="{StaticResource StatusBarItemStyle}">
                <TextBlock x:Name="StatusFilteredCountTextBlock" Text="Filtered: 0" />
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>
