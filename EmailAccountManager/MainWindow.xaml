<Window x:Class="EmailAccountManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailAccountManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Search  -->
            <RowDefinition Height="*"/>     <!-- Display all -->
            <RowDefinition Height="Auto"/>  <!-- Button -->
        </Grid.RowDefinitions>
        
        <!-- Search Box -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" Width="300" Margin="0,0,10,0"
                     Text ="Enter email address to filter..."
                     Foreground="Gray"
                     GotFocus="SearchTextBox_GotFocus"
                     LostFocus="SearchTextBox_LostFocus"/>
        </StackPanel>

        <ListView x:Name="SiteListView"
                  Grid.Row="1"
                  Margin="10"
                  SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Site Name" DisplayMemberBinding="{Binding SiteName}" Width="200"/>
                    <GridViewColumn Header="Email Address" DisplayMemberBinding="{Binding Email}" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <!-- Buttons for edit and add -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="EditButton" Content="Edit" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="AddButton" Content="Add New" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
